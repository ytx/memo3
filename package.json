{
  "name": "memo3",
  "productName": "memo3",
  "version": "1.0.4",
  "description": "A simple memo application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --mac --universal",
    "build-all": "electron-builder --mac --arm64 --x64 --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "memo",
    "markdown",
    "editor",
    "electron"
  ],
  "author": "memo3",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "ace-builds": "^1.43.2",
    "chokidar": "^4.0.3",
    "material-symbols": "^0.39.1"
  },
  "build": {
    "appId": "com.memo3.app",
    "productName": "memo3",
    "mac": {
      "icon": "icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "icon.icns",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "preview-renderer.js",
      "index.html",
      "preview.html",
      "styles.css",
      "icon.icns",
      "node_modules/ace-builds/src-min-noconflict/**/*",
      "node_modules/material-symbols/**/*",
      "node_modules/chokidar/**/*",
      "!node_modules/chokidar/node_modules"
    ],
    "asar": true,
    "asarUnpack": [],
    "compression": "maximum",
    "directories": {
      "output": "dist"
    }
  }
}
